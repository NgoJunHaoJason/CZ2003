NavigationInfo	{type [ "EXAMINE", "ANY"] }

Viewpoint {
fieldOfView 1
position 0 2 3
orientation 1 0 0 -0.5
}

Background {skyColor 0.9 0.9 0.9 }
Transform {
	translation  0 -0.05 0
	children [
Shape {appearance Appearance {material Material
	{diffuseColor 1 1 1} }
	geometry Box {size 2.2 0.05 2.2}}
]}

Transform {
	scale 1.5 1.5 1.5
	children [
Inline {url "http://www3.ntu.edu.sg/home/assourin/FVRML/CoordinateAxes.wrl"}
]}

    Transform {
      translation -1.2 0 -1.2
      children [
	Billboard {
	  children [
	    Shape {
	      appearance DEF LABEL_APPEARANCE Appearance {
		material Material {
		  diffuseColor 1 0 0
		  emissiveColor .33 .33 .1 }}
	      geometry Text {
		string [ "P1" ]
		fontStyle DEF LABEL_FONT FontStyle {
		  family [ "SANS" ]	 
		  justify [ "MIDDLE" ]  
		  size .2
		}}}]}]}

    Transform {
      translation 1.2 0	-1.2
      children [
	Billboard {
	  children [
	    Shape {
	      appearance DEF LABEL_APPEARANCE Appearance {
		material Material {
		  diffuseColor 1 0 0
		  emissiveColor .33 .33 .1 }}
	      geometry Text {
		string [ "P2" ]
		fontStyle DEF LABEL_FONT FontStyle {
		  family [ "SANS" ]	 
		  justify [ "MIDDLE" ]  
		  size .2
		}}}]}]}

    Transform {
      translation -1.2 0 1.2
      children [
	Billboard {
	  children [
	    Shape {
	      appearance DEF LABEL_APPEARANCE Appearance {
		material Material {
		  diffuseColor 1 0 0
		  emissiveColor .33 .33 .1 }}
	      geometry Text {
		string [ "P3" ]
		fontStyle DEF LABEL_FONT FontStyle {
		  family [ "SANS" ]	 
		  justify [ "MIDDLE" ]  
		  size .2
		}}}]}]}

    
# Plane parametrically by three points: P=P1+u*(P2-P1)+v*(P3-P1) 
FShape {
appearance FAppearance {
material FMaterial { 
diffuseColor "r=1; b=0; g=0;" }    }
geometry FGeometry {
# reduced resolution for the plane
resolution [1 1]
# parameters can be any real numbers
parameters [0 1 0 1]
definition "
function parametric_x(u,v,w,t)
{	
x1=-1; x2=1; x3=-1;
return x1+u*(x2-x1)+v*(x3-x1);
}
function parametric_y(u,v,w,t)
{
y1=0; y2=0; y3=0;
return y1+u*(y2-y1)+v*(y3-y1);
}
function parametric_z(u,v,w,t)
{
z1=-1; z2=-1; z3=1;	
return z1+u*(z2-z1)+v*(z3-z1);
}"
  }     }

